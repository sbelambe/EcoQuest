{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "es2022",

    "types": ["node"],
    "sourceMap": true,

    "strict": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
